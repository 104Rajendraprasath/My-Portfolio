{
  "name": "portfolio-project",
  "version": "1.0.0",
  "description": "This is a personal portfolio website created using only HTML and Tailwind CSS. The purpose of this project is to serve as a professional online presence to showcase my skills, projects, and experience to potential employers and collaborators.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "copy-html": "copyfiles -f ./index.html ./dist",
    "copy-folders": "copyfiles -u 1 \"images/**/*\" \"resume/**/*\" ./dist",
    "copy-assets": "npm run copy-html && npm run copy-folders",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/css/style.css --minify",
    "build": "npm run clean && npm run copy-assets && npm run build:css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/104Rajendraprasath/My-Portfolio.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/104Rajendraprasath/My-Portfolio/issues"
  },
  "homepage": "https://github.com/104Rajendraprasath/My-Portfolio#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
